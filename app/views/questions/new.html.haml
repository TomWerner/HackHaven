%h2 Create Question

%div.central-form
  -unless @question ==nil
    -if @question.errors.any?
      %ul
      -@question.errors.full_messages.each do |msg|
        %li #{msg}

  = form_tag questions_path do

    %div.form-group
      = label :question, :title, 'Title'
      = text_field :question, 'title', class: "form-control"
    %div.form-group
      = label :question, :contest, 'Contest'
      = collection_select(:question, 'contest_id', Contest.all, :id, :contestname)
    %div.form-group
      = label :question, :description, 'Description'
      = text_area :question, 'description', rows:"5", class: "form-control"

    = submit_tag 'Create Question', class: "btn btn-primary", id: "submit"
    
= javascript_include_tag 'questions_new'
:javascript
    $(question_new.setup)
     