%h2 Create Announcement (Please admins only)

%div.central-form
  = form_tag announcements_path do

    %div.form-group
      = label :announcement, :title, 'Title'
      = text_field :announcement, 'title', class: "form-control"
    %div.form-group
      = label :announcement, :content, 'Content'
      = text_area :announcement, 'content', rows:"5", class: "form-control"

    = submit_tag 'Create Announcement', class: "btn btn-primary"