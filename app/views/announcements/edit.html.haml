%h2 Edit Announcement (Please admins only)

%div.central-form
  = form_tag announcement_path(@announcement), :method => :put do

    %div.form-group
      = label :announcement, :title, 'Title'
      = text_field :announcement, 'title', class: "form-control"
    %div.form-group
      = label :announcement, :content, 'Content'
      = text_area :announcement, 'content', rows:"5", class: "form-control"

    = submit_tag 'Update Announcement', class: "btn btn-primary"